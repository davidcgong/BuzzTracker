<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.davidgong.donation_tracker.controllers.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="97dp">

        <Button
            android:id="@+id/locationViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Location Data" />

        <Button
            android:id="@+id/insertItemButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/locationViewButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-86dp"
            android:text="Insert Item" />

        <Button
            android:id="@+id/insertLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationViewButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:text="Insert Location" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
